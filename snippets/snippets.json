{
    "HALT Instruction": {
        "prefix": "halt",
        "body": "HALT",
        "description": "Insert HALT instruction"
    },
    "Function Template": {
        "prefix": "func",
        "body": [
            "${function_name}",
            "1:$0:",
            "ENDFUNC"
        ],
        "description": "Create a new function"
    },
    "Namespace Template": {
        "prefix": "ns",
        "body": [
            "${namespace_name}",
            "NAMESPACE",
            "${function_name}:",
            ";CODE",
            "ENDSPACE"
        ],
        "description": "Create a new namespace"
    }
}